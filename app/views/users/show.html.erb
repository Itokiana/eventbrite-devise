<div class="center jumbotron">
  <h1>la liste des évenements auquel <%= @user.name %> participe</h1>
  <% if user_signed_in? %>
  <a class="btn btn-success" href="<%= new_event_path %>">Créer un évènement</a>
  <% end %>
</div>


<div class="shadow mt-5 p-5 col-lg-10 offset-1 bg-light">
  <table class="table table-striped table-dark">
    <thead>
      <tr class="bg-danger">
        <th scope="col">#</th>
        <th scope="col">Place</th>
        <th scope="col">Description</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    
      <% @events.each do |e| %>
      <tr>
        <th scope="row"><%= e.id%></th>
        <td><%= e.place %></td>
        <td><%= e.description %></td>
        <td><%= Date.parse(e.date.to_s).strftime('%a %d %b %Y') %></td>
        <td>
        <%= link_to "Afficher", event_path(e.id), class: 'btn btn-info' %>
        </td>
      </tr>
      <% 
      end 
      %>
    </tbody>
  </table>
</div>