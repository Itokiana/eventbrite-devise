<div class="bg-light mt-5 p-5 offset-lg-2 col-lg-8 shadow">
<% if flash[:error] %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Echec!</strong> <%= flash[:error] %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close" >
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-8 offset-2 center">
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :event_date,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :place %>
    <%= form.text_field :place, id: :event_place,class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :Prix %>
    <%= form.number_field :price, id: :event_price,class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
